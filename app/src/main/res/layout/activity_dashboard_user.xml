<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardUser"
    android:background="@drawable/bgdashboarduser">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemi"
                    android:gravity="center_horizontal"
                    android:text="Selamat Datang"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="100dp"/>
                <TextView
                    android:id="@+id/users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengguna!"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginTop="-10dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/poppinsbold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:text="Gunakan Username: Admin , dan Password: 123. Untuk mengakses Database CRUD."
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/usercard1x4"
                android:layout_below="@id/LL1">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/usercard2x4"
                android:layout_below="@id/LL2"
                android:layout_marginTop="-25dp">

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navuser">

    </LinearLayout>

</RelativeLayout>